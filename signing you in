"use client"

import { useRouter } from "next/navigation"
import styles from "./session-expired.module.css"

export default function SessionExpired() {
  const router = useRouter()

  const handleSignInAgain = () => {
    router.push("/")
  }

  return (
    <div className={styles.container}>
      <div className={styles.content}>
        <div className={styles.iconWrapper}>
          <svg className={styles.icon} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2">
            <circle cx="12" cy="12" r="10" />
            <polyline points="12 6 12 12 16 14" />
          </svg>
        </div>

        <h1 className={styles.title}>Session Expired</h1>
        <p className={styles.description}>
          Your session has expired due to inactivity. Please sign in again to continue.
        </p>

        <button onClick={handleSignInAgain} className={styles.button}>
          Sign In Again
        </button>

        <p className={styles.footer}>For security reasons, sessions expire after a period of inactivity.</p>
      </div>
    </div>
  )
}

////
.container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
  padding: 20px;
}

.content {
  text-align: center;
  max-width: 500px;
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.iconWrapper {
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
}

.icon {
  width: 80px;
  height: 80px;
  color: #663399;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.05);
  }
}

.title {
  font-size: 32px;
  font-weight: 700;
  color: #663399;
  margin: 0 0 15px 0;
  letter-spacing: -0.5px;
}

.description {
  font-size: 16px;
  color: #666666;
  margin: 0 0 40px 0;
  line-height: 1.6;
}

.button {
  background-color: #663399;
  color: white;
  border: none;
  padding: 14px 40px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 30px;
  box-shadow: 0 4px 15px rgba(102, 51, 153, 0.2);
}

.button:hover {
  background-color: #552a7a;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 51, 153, 0.3);
}

.button:active {
  transform: translateY(0);
  box-shadow: 0 2px 10px rgba(102, 51, 153, 0.2);
}

.footer {
  font-size: 13px;
  color: #999999;
  margin: 0;
  line-height: 1.5;
}


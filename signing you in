"use client"

import styles from "./signin.module.css"

export default function SigningInPage() {
  return (
    <div className={styles.signingInContainer}>
      <div className={styles.signingInContent}>
        <div className={styles.animatedLogo}>
          <div className={styles.logoCircle}></div>
        </div>

        <h1 className={styles.signingInTitle}>Signing you in</h1>

        <div className={styles.loadingSpinner}>
          <div className={styles.spinnerDot}></div>
          <div className={styles.spinnerDot}></div>
          <div className={styles.spinnerDot}></div>
        </div>

        <p className={styles.signingInSubtitle}>Please wait while we authenticate your credentials</p>
      </div>
    </div>
  )
}


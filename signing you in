}

/* Loading Spinner Dots */
.loadingSpinner {
  display: flex;
  gap: 12px;
  align-items: center;
  justify-content: center;
  height: 40px;
}

.spinnerDot {
  width: 12px;
  height: 12px;
  background-color: var(--white);
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out;
}

.spinnerDot:nth-child(1) {
  animation-delay: -0.32s;
}

.spinnerDot:nth-child(2) {
  animation-delay: -0.16s;
}

.spinnerDot:nth-child(3) {
  animation-delay: 0s;
}

@keyframes bounce {
  0%,
  80%,
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Subtitle */
.signingInSubtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.9);
